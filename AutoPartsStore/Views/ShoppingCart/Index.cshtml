@model ShoppingCartViewModel

<h2>Shopping Cart: All the parts you selected</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>Selected Amount</th>
            <th>Part</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-left"><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-partId="@item.Part.PartId" alt="">Decrease Amount</a></td>
                <td class="text-center">@item.Amount</td>
                <td class="text-left">@item.Part.Name</td>
                <td class="text-right">@item.Part.Price.ToString("c")</td>
                <td class="text-right">
                    @((item.Amount * item.Part.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <td colspan="4" class="text-right">Total</td>
        <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
    </tfoot>
</table>


<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Clear Cart</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>